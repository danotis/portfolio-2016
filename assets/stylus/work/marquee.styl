.marquee
  position relative

  .project-title
    position absolute
    z-index 9999
    top 80px

  .marquee-images
    position relative
    height 775px

  .marquee-bg
    position relative
    width 100%

  .marquee-bg img
    float right
    width 100%

  .align
    width 80%
    height 465px
    float right
    background-position center center
    background-size 190%

  .marquee-device
    z-index 9998
    position absolute
    right 110px
    top 115px

  .marquee-device img
    max-width 450px

  p.project-type, a.launch-project
    font-weight 600
    font-family "brandon-grotesque", Arial, sans-serif
    font-size 14px
    text-transform uppercase
    letter-spacing 5px
    color #4d4d4d
    margin 0
    padding 0

  a.launch-project
    display block
    clear both
    position relative
    top 10px
    font-weight 300
    color #fff
    text-decoration none
    margin 0
    padding 0
    width 80%
    float right

  a.launch-project:hover
    color #E2BA58

  .icon-arrow
    font-size 11px

  @media(max-width: desktop)

    .marquee-device
      right 60px
      top 160px

    .marquee-device img
      max-width 300px

  @media(max-width: tablet-landscape)

      .marquee-device
        right -50px
        top 170px

      .marquee-device img
        max-width 250px

  @media(max-width: tablet)

    .mobile
      display block

    .desktop
      display none

    .project-title
      top -5px

    .marquee-bg img
      position relative
      top 90px

    a.launch-project
      width 100%
      text-align center
      top 180px
      font-size 12px

    h1
      font-size 30px

    .img-wrap
      height 630px
      overflow hidden

    .marquee-device
      right auto
      top 200px
      width 100%
      text-align center

      img
        max-width 55%

  @media(max-width: mobile)

    .img-wrap
      overflow visible
      height auto

    h1
      font-size 18px
      letter-spacing 5px

    p.project-type
      font-size 10px !important

    .project-title
      top 10px

    .marquee-images
      width 100%
      text-align center
      height 700px

    .marquee-bg
      width 100%

    a.launch-project
      top 190px

    .marquee-bg img
      max-width 100%

    .marquee-device
      top 135px

      img
        max-width 75%
