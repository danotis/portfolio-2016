.info-marquee

  .wrapper
    width 100%
    height 650px

  .selfie-wrap
    position relative
    z-index 1
    width 100%

    img
      width 80%
      float right

  .quote
    position absolute
    top 420px
    z-index 9999
    float left

    p
      font-size 28px
      width 40%
      line-height 40px

    p:before
      content '\201C'
      position absolute
      margin-left -.5em

  .quote-caption
    font-size 20px
    font-weight 300
    letter-spacing 1px

  @media(max-width: desktop)

    .quote
      top 250px

    .wrapper
      height 500px

  @media(max-width: tablet-landscape)

    .wrapper
      height 400px

    .quote
      top 220px
      left 100px

      p
        font-size 26px
        line-height 36px

  @media(max-width: tablet)

    .selfie-wrap img
      width 100%
      float none
      top 20px
      position relative

    .quote
      top 445px

      p
        font-size 20px
        line-height 26px
        width 60%

    .quote-caption
      font-size 16px

    .wrapper
      height 520px

  @media(max-width: mobile)

    .quote
      top 220px
      left 72px

    .wrapper
      height 390px
