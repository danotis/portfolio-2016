.album-listing
  width 90%
  margin-left 100px
  position relative
  height 120%

  .list-rank
    position relative
    z-index 9999
    font-family "Vinyl", sans-serif
    font-size 36px
    color #7DF1D7
    letter-spacing 3px
    border 3px solid #7DF1D7
    border-radius 100px
    padding 20px
    width 40px
    height 40px
    text-align center
    font-weight normal

  .bg-number
    position absolute
    z-index 1
    font-family "brandon-grotesque", sans-serif
    font-size 270px
    font-weight 900
    color #ECECEC
    text-transform uppercase
    top -70px
    left 35px

  .album-artwork
    max-width 40%
    position relative
    z-index 9999
    float right
    top -5px

    img
      width 100%
      position relative
      box-shadow 0px 21px 58px -23px rgba(0,0,0,0.4)
      margin-bottom 30px

  .spotify
    clear both
    width 250px
    margin 0 auto

  .button
    transition 0.5s
    clear both
    height 50px
    width 250px
    background-color #F6F6F6
    border-radius 100px
    border none
    color #000
    font-family "Vinyl", sans-serif
    font-size 20px
    letter-spacing 1px
    text-transform uppercase
    text-align center
    line-height 51px
    box-shadow 0px 11px 15px -2px rgba(0,0,0,0.1)

  .button:hover
    background-color #eee
    transition 0.5s
    box-shadow 0px 4px 4px 0px rgba(0,0,0,0.1)
    cursor pointer

  span.button-copy
    position relative
    left 6px

  .button img
    width 25px
    position relative
    bottom -14px
    float left
    left 32px

  .album-information
    position relative
    margin-top 25px
    width 45%
    z-index 2

    h2
      font-family "Vinyl", sans-serif
      font-size 48px
      color #000
      letter-spacing 3px
      line-height 40px
      text-transform uppercase
      font-weight normal
      position relative
      z-index 9999
      padding 0
      margin 0

    h3
      font-family "Vinyl", sans-serif
      font-size 36px
      color #ccc
      letter-spacing 3px
      line-height 50px
      text-transform uppercase
      font-weight normal
      position relative
      z-index 9999
      padding 0
      margin 0

  .album-blurb
    width 40%
    float left
    position relative
    top 10px
    z-index 9999

    p
    color #000
    font-size 18px
    line-height 34px

  @media(max-width: 1085px)

    .album-blurb
      width 30%

  @media(max-width: tablet-landscape)

    img
      display block

    .album-artwork
      margin-right 35px

    .album-information

      h2
        font-size 40px

      h3
        font-size 32px

    .album-blurb
      display block
      width 50%

  @media(max-width: 885px)

    .album-blurb
      display none

  @media(max-width: tablet)
    width 100%
    height 120%
    overflow hidden
    margin-left 0

    .list-rank
      margin 0 auto

    .bg-number
      width 100%
      top -80px
      left 0
      overflow hidden
      text-align center

    .album-artwork
      max-width 100%
      position relative
      z-index 9999
      top 25px
      margin-bottom 50px
      float none
      margin-right 0

      img
        display block
        width 80%
        margin 0 auto

    .album-information
      margin-bottom 25px
      text-align center
      width 100%
      position relative
      bottom 56px
      clear both

      h2
        text-align center
        font-size 40px
        line-height 38px

      h3
        font-size 30px
        font-weight normal

    .spotify
      width 300px
      text-align center
      position relative
      bottom -150px

      .button
        width 300px
        height 70px
        font-size 26px
        line-height 75px

        img
          width 35px
          margin 0
          top 19px
          left 27px

  @media(max-width:mobile)

    .bg-number
      font-size 220px
      top -35px

    .spotify
      width 280px
      bottom -135px

      .button
        width 280px
        height 55px
        font-size 20px
        line-height 58px

        img
          width 30px
          top 14px
          left 38px

    .album-information

      h2
        font-size 30px
        line-height 33px
        width 80%
        margin 0 auto

      h3
        font-size 24px
        line-height 33px
