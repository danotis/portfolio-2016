body.albums
  max-width 100%
  height 100%

.sixteen
  position relative
  max-width 100%
  height 100%

.so-close
  color #000
  position relative
  top 100px
  left 100px
  z-index 9999
  height 125%

  p
    margin 0
    padding 0
    color #aaa

  ul>li
    margin-bottom 20px

    a
      color #000

    a:hover
      color #7DF1D7

    .icon-arrow
      font-size 11px

  h2
    font-family "Vinyl", sans-serif
    font-size 48px
    font-weight normal
    text-transform uppercase
    letter-spacing 0px
    color #000
    margin 0
    padding 0

  .year-marquee
    position fixed
    z-index 1

  .hon-list
    position relative
    z-index 2

    ul
      font-size 16px

body.albums
    background-color #F6F6F6

.album-marquee
  height 100%

  img
    width 113%

.full-description
  height 130%
  color #000
  font-size 24px
  line-height 38px
  font-weight 400
  text-align center
  position relative
  top 680px
  margin-bottom 320px
  
  p
    position relative
    width 65%
    margin 0 auto
    line-height 53px

span.honorable-mentions a
  font-size 14px
  color #ccc !important

span.honorable-mentions a:hover
  color #7DF1D7 !important

@media(max-width: tablet)

  body.albums
    max-width 100%

  @media(max-width: mobile)
    .full-description
      height 100%
      font-size 18px

      p
        width 85%
        line-height 28px

      span.honorable-mentions
        position relative
        top 15px

    ul
      padding 0
      margin 0

    .so-close
      top 60px
      left 40px
      height 175%

      .hon-list ul
        font-size 13px

      h2
        font-size 36px
